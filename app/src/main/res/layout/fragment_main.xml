<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.dionysuspoon.testingdynamicapi.MainActivity">
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:passwordToggleEnabled="true"
        app:hintTextAppearance ="@style/TextInputHint">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/et_membercard_register1_pwd"
            style="@style/textview_black"
            android:hint="Password"
            android:maxLines="1"
            android:scrollHorizontally="true"
            android:drawablePadding="10dp"
            android:inputType="textPassword"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/textbg"
            android:ellipsize="end"
            android:maxLength="20"
            android:imeOptions="actionDone"
            android:padding="8dp"
            />
    </android.support.design.widget.TextInputLayout>
    <EditText
        android:hint="abc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/b_raw"
        android:text="raw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <Button
        android:id="@+id/b_test1"
        android:text="test1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
        <Button
            android:id="@+id/b_test2"
            android:text="test2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/b_test3"
            android:text="test3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/b_test4"
            android:text="test4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />



    </LinearLayout>
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/rl_main">


    </RelativeLayout>

</LinearLayout>
